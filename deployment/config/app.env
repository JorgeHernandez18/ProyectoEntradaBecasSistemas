# ===========================================
# Configuración de la Aplicación PHP
# ===========================================

# Base de datos PostgreSQL (existente en el servidor)
# IMPORTANTE: Configura estas variables en tu servidor antes de desplegar
DB_HOST=host_postgresql
DB_PORT=5432
DB_NAME=nombre_base_datos
DB_USER=usuario_db
DB_PASS=password_db
DB_CHARSET=utf8

# Configuración PHP
PHP_TIMEZONE=America/Bogota
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=10M
PHP_POST_MAX_SIZE=10M

# Configuración de la aplicación
APP_ENV=production
APP_DEBUG=false

# Configuración de sesiones
SESSION_LIFETIME=7200

# Configuración de logs
LOG_LEVEL=info
LOG_PATH=/var/log/becarios/

# Configuración de archivos
UPLOAD_PATH=/app/admin/assets/fotos_becarios/
TEMP_PATH=/tmp/

# URLs base (ajustar según dominio)
BASE_URL=http://localhost:8080
ADMIN_URL=http://localhost:8080/admin